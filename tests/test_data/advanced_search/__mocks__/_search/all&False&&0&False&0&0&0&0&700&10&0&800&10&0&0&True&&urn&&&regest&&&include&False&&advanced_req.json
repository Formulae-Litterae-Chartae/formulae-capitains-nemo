{
  "query": {
    "bool": {
      "must": [
        {
          "nested": {
            "path": "specific_date",
            "query": {
              "bool": {
                "should": [
                  {
                    "bool": {
                      "must": [
                        {
                          "range": {
                            "specific_date.year": {
                              "gte": 700,
                              "lte": 800
                            }
                          }
                        },
                        {
                          "bool": {
                            "should": [
                              {
                                "bool": {
                                  "must": [
                                    {
                                      "match": {
                                        "specific_date.month": 10
                                      }
                                    },
                                    {
                                      "range": {
                                        "specific_date.day": {
                                          "lte": 31,
                                          "gte": 1
                                        }
                                      }
                                    }
                                  ]
                                }
                              }
                            ]
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            }
          }
        }
      ]
    }
  },
  "sort": [
    "sort_prefix",
    "urn"
  ],
  "from": 0,
  "size": 10000,
  "highlight": {
    "fields": {
      "text": {
        "fragment_size": 1000
      },
      "regest": {
        "fragment_size": 1000
      }
    },
    "pre_tags": [
      "</small><strong>"
    ],
    "post_tags": [
      "</strong><small>"
    ],
    "encoder": "html"
  }
}